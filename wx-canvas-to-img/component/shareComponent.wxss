.share-modal-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5)
}

.canvas-wrap {
  position: absolute;
  width: 572rpx;
	height: 1028rpx;
	background-color: #ffffff;
	box-shadow: 0px 0px 35rpx 0px 
		rgba(0, 0, 0, 0.36);
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin:10px auto;
}

.share-img {
  width: 572rpx;
	height:1028rpx;
}

.share-img-tips {
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  height: 100rpx;
  background: #009148;
  line-height: 100rpx;
  border-radius: 30px;
  padding:0 10px;  
  width:80%;
  margin:auto;
}

.wxParse-p image {
  width: 690rpx!important;
}

.bottom-share-modal {
  position: fixed;
  height: 100%;
  width: 100%;
  /* background: rgba(0, 0, 0, .5); */
  left: 0;
  bottom: 0;
  z-index: 99;
}

.share-detail {
  background: #fff;
  height: 320rpx;
  position: absolute;
  left: 0;
  width: 100%;
  font-size: 28rpx;
  color: #6666;
  bottom: 0;
  z-index: 100;
}

.share-items {
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  width: 480rpx;
  margin: 46rpx auto;
}

.share-tips {
  font-size: 30rpx;
  margin: 40rpx 40rpx 20rpx;
}

.share-detail image {
  width: 60rpx;
  height: 60rpx;
}

.share-text {
  margin-top: 15rpx;
}

.share-detail .wx-image {
  width: 60rpx;
  height: 60rpx;
  margin-top: -4rpx;
}

.share-detail button::after {
  border: 0;
}

.share-detail button {
  background: #fff;
  padding: 0;
  line-height: 0;
}

.reply-input {
  width: 750rpx;
  position: fixed;
  display: flex;
  align-items: center;
  height: 90rpx;
  justify-content: space-between;
  bottom: 0;
  left: 0;
  background: #fff;
}

.reply-input input {
  width: 100%;
  height: 100%;
}

.opreat-btn {
  display: flex;
  font-size: 26rpx;

}

.input-text {
  border: 1px solid #eee;
  border-radius: 20rpx;
  margin-left: 30rpx;
  padding: 0 10rpx;
  width: 400rpx;
  height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.input-text input{
  width: 100%;
}

.reply-to-name {
  white-space: nowrap;
  color: #5784BB;
  padding-right: 10rpx;
}

.opreat-btn > view {
  padding: 10rpx 28rpx;
  border: 1px solid #000;
  border-radius: 40rpx;
  margin-right: 30rpx;
}

.opreat-btn > view:nth-child(2) {
  background: #000;
  color: #fff;
}

.open-seting-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}

.btn-openset {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 60rpx;
}

.set-title {
  font-size: 30rpx;
  margin-top: 40rpx;
}

.open-set-inner {
  width: 400rpx;
  height: 220rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: #ffffff;
  padding: 30rpx;
}

.btn-openset > view:nth-child(1) {
  color: #919191;
}

.button-style {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 0;
  font-size: 30rpx;
  line-height: 0;
  color: red;
}

button::after {
  border: 0;
}
